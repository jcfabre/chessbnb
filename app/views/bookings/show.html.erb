<div class="container login">
  <div class="container">

    <div class="booking-page" style="background-image: linear-gradient(-225deg,rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= cl_image_path @booking.game.photo %>);">
      <div class="row">
        <div class="col-xs-12 banner-booking" >
          <h1 class="pin-top"><%= @booking.game.title %></h1>

          <div>
            <p> GAME OWNER </p>
            <%= cl_image_tag(@game_owner.photo, :gravity=>"face", :width=>150, :height=>150, :crop=>"thumb", class: "avatar-resizable") %>
            <p> <%= @game_owner.full_name %></p>
          </div>

          <h1> VS </h1>

          <div>
            <p> CHALLENGER </p>
            <%= cl_image_tag(@challenger.photo, :gravity=>"face", :width=>150, :height=>150, :crop=>"thumb", class: "avatar-resizable") %>
            <p> <%= @challenger.full_name %></p>
          </div>


        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="cta-banner">
        <%= link_to "Add a review",new_booking_review_path(@booking), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>

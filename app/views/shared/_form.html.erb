<div class="container">
  <div class=“row”>
   <div class="col-sm-offset-3 col-sm-6">
     <div class=“game-show-card”>
        <%= simple_form_for @game do |f| %>
          <%= f.input :title %>
          <%= f.input :address %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :description, as: :text %>
          <%= f.input :time_flexible, as: :radio_buttons %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.association :time_control %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
     </div>
   </div>
  </div>
</div>

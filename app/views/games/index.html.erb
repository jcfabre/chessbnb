<h1>Games</h1>

<div class="container">
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-category"><%= game.user.first_name %></div>
          <div class="card-description">
            <h2><%= game.title %></h2>
            <p><%= game.description %></p>
            <p><%= link_to "Create a booking", new_game_booking_path(game) %></p>
          </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
<div id="map-container" style="position: relative">
  <div id="map" style="width: 50%; height: 400px; left: 150px"></div>
</div>
<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(
      document.getElementById('map'),
      {
        center: { lat: 48.866667, lng: 2.333333 },
        scrollwheel: false,
        zoom: 8
      }
    );
  }
</script>
  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- Gmaps JavaScript -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>
